def is_leap_year(year):
    if year % 4 == 0:
        if year % 100 == 0:
            if year % 400 == 0 :
                print(f"{year} is a Leap Year.\n")
            else:
                print(f"{year} is not a Leap Year.\n")
        else:
            print(f"{year} is a Leap Year.\n")
    else:
        print(f"{year} is not a Leap Year.\n")

def main():
    """Main Function to Run the Game"""
    while True:
        status = input("Want to check for Leap Year ? (y/n) : ").lower()
        if status == 'y':
            is_leap_year(int(input("Enter the Year : "))
        else:
            print("Goodbye! ğŸ‘‹ See you next time.\n")
            break
main()